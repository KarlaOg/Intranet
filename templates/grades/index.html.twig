{% extends 'base.html.twig' %}

{% block title %}Grades index{% endblock %}

{% block body %}
   
<h1 class="display-4">Grades index</h1>
    <table class="table table-bordered table-hover">
        <thead class="thead-light" >
            <tr>
                <!--<th >Id</th>-->
                <th >Grade</th>
                <th >Comment</th>
                <th >Course</th>
                 {% if "ROLE_PROFESSOR" in app.user.roles %}
                <th>actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
    
        {% for grade in grades %}
            <tr>
<!--                <td>{{ grade.id }}</td>-->
                <td>{{ grade.grade }}</td>
                <td>{{ grade.comment }}</td>
                <td>{{ grade.course.name }}</td>       
                {% if "ROLE_PROFESSOR" in app.user.roles %}
                <td>
                    <a href="{{ path('courses_show', {'id': course.id}) }}">show</a>
                    <a href="{{ path('courses_edit', {'id': course.id}) }}">edit</a>
                </td>
                {% endif %}
            </tr>
          
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        <p>{{average}}</p>
    </table>

    <!--<a href="{{ path('grades_new') }}">Create new</a>--
{% endblock %}
